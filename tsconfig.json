{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDirs": ["./lib"],
    "outDir": "dist"
  },
  "exclude": [
      "node_modules",
      "test",
      "dist"
  ]
}
